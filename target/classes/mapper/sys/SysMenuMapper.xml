<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.db.sys.dao.SysMenuDao">
 
  <update id="updateObject"
            parameterType="com.db.sys.entity.SysMenu">
         update sys_menus
         set
           name=#{name},
           type=#{type},
           sort=#{sort},
           url=#{url},
           parentId=#{parentId},
           permission=#{permission},
           modifiedUser=#{modifiedUser},
           modifiedTime=now()
        where id=#{id}
    </update>
 
   <insert id="insertObject">
          insert into sys_menus
          (name,url,type,sort,note,parentId,permission,
           createdTime,modifiedTime,createdUser,modifiedUser)
          values
          (#{name},#{url},#{type},#{sort},#{note},#{parentId},#{permission},
          now(),now(),#{createdUser},#{modifiedUser})
  </insert>
 
   <select id="findZtreeMenuNodes"
            resultType="com.db.common.vo.Node">
        select id,name,parentId
        from sys_menus        
   </select>
 
   <!-- 基于菜单id统计子元素的个数 -->
   <select id="getChildCount"
           resultType="int">
        select count(*)
        from sys_menus
        where parentId=#{id}        
   </select>
   <!-- 基于菜单id删除菜单自身信息 -->
   <delete id="deleteObject">
        delete from sys_menus
        where id=#{id}
   </delete>
   
   <!-- 查询所有菜单以及上级菜单信息 -->
   <select id="findObjects"
           resultType="map"><!-- map为一个别名 -->
           <!-- 方法1 -->
           <!-- 
           select c.*,p.name parentName
           from sys_menus c left join  sys_menus p
           on c.parentId=p.id
           -->
           
           <!-- 方案2 -->
           
           select c.*,(select name
                  from sys_menus p
                  where c.parentId=p.id) parentName
           from sys_menus c
   
   </select>
   
 </mapper>